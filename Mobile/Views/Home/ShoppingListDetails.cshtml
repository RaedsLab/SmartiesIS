@model IEnumerable<Domain.Entities.ItemShopping>

@{
    if (Model.Count() > 0)
    { 
    ViewBag.Title = @Model.ElementAt(0).ShoppingList.Name;
    }
    else
    {
        ViewBag.Title = "Empty List";
    }
}

<div>
    <ul class="table-view">
        @foreach (var item in Model)
        {
            <text>
                <li class="table-view-cell media">
                    
                                                            @if (@item.Product.Id != null)
                    {
  <img class="media-object pull-left" width="42" height="42" src="@Url.Content("~/Content/Uploads/Products/"+@item.Product.Image)" />
                        <div class="media-body">
                            @item.Product.Name
                    <p>@item.Product.Description</p>
                        </div>
                    }
                    else if (@item.Brand != null)
                    {
                        <div class="media-body brand">
                            @item.Brand
                        </div>
                    }
                    else if (@item.Category != null)
                    {
                        <div class="media-body category">
                            @item.Category
                        </div>
                    }
                </li>
            </text>
        }
    </ul>
</div>
